<!DOCTYPE html>
<html>
    <head>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/kendo/css")
      
        <title>@ViewBag.Title A9Software</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    	<link href="@Url.Content("~/Content/kendo/2015.1.429/kendo.common.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.1.429/kendo.mobile.all.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.1.429/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.1.429/kendo.default.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2015.1.429/kendo.dataviz.default.min.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/kendo/2015.1.429/jquery.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo/2015.1.429/jszip.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo/2015.1.429/kendo.all.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo/2015.1.429/kendo.aspnetmvc.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
    <script src=" https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"> </script>
        <style scoped>
            a{
                text-decoration:none;
            }
            
        </style>
</head>
<body class="body">
    <div class="navbar navbar-inverse navbar-fixed-top  ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["LoggedId"] != null)
                {
                   <ul>
                       <li><a href="@Url.Action("After_Login","AfterLogin")" style="font-size:xx-large;font-style:italic;color:#ffffff; font-family:'Monotype Corsiva';" class="navbar-brand">A9</a></li>

                   </ul>
                    @*@Html.ActionLink("A9", "After_Login", "AfterLogin", new { @class = "navbar-brand", @style = "font-family:Monotype Corsiva;font-size:x-large;color:#fffff" })*@
                }
                else
                {
                    <ul>
                        <li><a href="@Url.Action("Index","Home")" style="font-size:xx-large;font-style:italic;color:#ffffff; font-family:'Monotype Corsiva';" class="navbar-brand">A9</a></li>

                    </ul>

                    @*@Html.ActionLink("A9", "Index", "Home", new { @class = "navbar-brand", @style = "font-family:Monotype Corsiva;font-size:x-large;color:#fffff" })*@
                }

            </div>
            @Html.Partial("_LayoutMenu")

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

        @Html.Partial("_LayoutSignature")

    </div>
    @RenderSection("scripts", required: false)
    @RenderSection("featured", required: false)





</body>
</html>